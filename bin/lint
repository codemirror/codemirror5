#!/usr/bin/env node

var lint = require("../test/lint/lint"),
    path = require("path");

if (process.argv.length > 2) {
  lint.checkDir(process.argv[2]);
} else {
  process.chdir(path.resolve(__dirname, ".."));
  lint.checkDir("lib");
  lint.checkDir("mode");
  lint.checkDir("addon");
  lint.checkDir("keymap");
}

process.exit(lint.success() ? 0 : 1);
